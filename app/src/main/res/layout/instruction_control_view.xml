<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/instruction_button_close"
        style="@style/HFSRedButtonStyle"
        android:layout_width="@dimen/close_button_size"
        android:layout_height="@dimen/close_button_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_close" />

    <ImageView
        android:id="@+id/instruction_button_ar_hint"
        style="@style/HFSBlueButtonStyle"
        android:layout_width="@dimen/close_button_size"
        android:layout_height="@dimen/close_button_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_question_mark" />

    <ImageView
        android:id="@+id/instruction_button_previous_step"
        style="@style/HFSBlueButtonStyle"
        android:layout_width="@dimen/step_button_size"
        android:layout_height="@dimen/step_button_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_previous_step" />

    <ImageView
        android:id="@+id/instruction_button_next_step"
        style="@style/HFSBlueButtonStyle"
        android:layout_width="@dimen/step_button_size"
        android:layout_height="@dimen/step_button_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_next_step" />

</RelativeLayout>